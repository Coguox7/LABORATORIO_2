<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tvProceso"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom|end"
        android:text=""
        android:textColor="#000000"
        android:textSize="38sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUno"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="1"
            app:backgroundTint="@color/cardview_dark_background" />

        <Button
            android:id="@+id/btnDos"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="2"
            app:backgroundTint="@color/cardview_dark_background" />

        <Button
            android:id="@+id/btnTres"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="3"
            app:backgroundTint="@color/cardview_dark_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCuatro"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="4"
            app:backgroundTint="@color/cardview_dark_background" />

        <Button
            android:id="@+id/btnCinco"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="5"
            app:backgroundTint="@color/cardview_dark_background" />

        <Button
            android:id="@+id/btnSeis"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="6"
            app:backgroundTint="@color/cardview_dark_background" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSiete"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="7"
            app:backgroundTint="@color/cardview_dark_background" />

        <Button
            android:id="@+id/btnOcho"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="8"
            app:backgroundTint="@color/cardview_dark_background" />

        <Button
            android:id="@+id/btnNueve"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="9"
            app:backgroundTint="@color/cardview_dark_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCero"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="0"
            app:backgroundTint="@color/cardview_dark_background"
            app:iconTint="#131D51" />

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="Borrar"
            app:backgroundTint="@color/purple_500"
            app:iconTint="#131D51" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSuma"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="+"
            app:backgroundTint="#3C4471"
            app:iconTint="#131D51" />

        <Button
            android:id="@+id/btnResta"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="-"
            app:backgroundTint="#3C4471"
            app:iconTint="#000000" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:text="="
            app:backgroundTint="?attr/colorError" />


    </LinearLayout>


</LinearLayout>